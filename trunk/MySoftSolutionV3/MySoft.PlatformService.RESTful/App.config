<?xml version="1.0"?>
<configuration>

	<configSections>
		<section name="castle" type="Castle.Windsor.Configuration.AppDomain.CastleSectionHandler, Castle.Windsor"/>
	</configSections>
	<castle>
		<components>
			<component id="UserService" service="MySoft.RESTful.Demo.IUserService, MySoft.RESTful.Demo" type="MySoft.RESTful.Demo.UserService, MySoft.RESTful.Demo"/>
		</components>
	</castle>

	<appSettings>
		<add key="AuthType" value="MySoft.RESTful.OAuth.RESTfulOAuth, MySoft.RESTful.OAuth"/>
	</appSettings>
	<system.web>
		<compilation debug="true" targetFramework="4.0"/>
	</system.web>

	<system.serviceModel>
		<serviceHostingEnvironment aspNetCompatibilityEnabled="true"/>
		<standardEndpoints>
			<webHttpEndpoint>
				<!-- 
            Configure the WCF REST service base address via the global.asax.cs file and the default endpoint 
            via the attributes on the <standardEndpoint> element below
        -->
				<standardEndpoint name="" helpEnabled="false" automaticFormatSelectionEnabled="true"/>
			</webHttpEndpoint>
		</standardEndpoints>
	</system.serviceModel>

</configuration>
